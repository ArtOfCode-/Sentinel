<h3><%= @reason.name %></h3>
<p><%= pluralize(@reason.posts.count, "post") %> caught, most recent <%= time_ago_in_words(@reason.most_recent.created_at) %> ago</p>
<ul>
  <% @feedback_counts.each do |fc| %>
    <li><%= "#{fc[1]} #{fc[0]}" %></li>
  <% end %>
</ul>

<% @reason.posts.order(:created_at => :desc).each do |post| %>
  <%= render 'posts/post', :post => post %>
<% end %>
