<div class="reason clearfix">
  <div class="reason-name pull-left text-left">
    <%= link_to reason.name, url_for(:controller => :reasons, :action => :show, :id => reason.id) %>
  </div>
  <div class="reason-meta pull-right text-right">
    <%= pluralize(reason.posts.count, "post") %> |
    last used <%= time_ago_in_words(reason.most_recent.created_at) %> ago
  </div>
</div>
